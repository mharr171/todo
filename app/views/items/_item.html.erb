<div class="row clearfix">
  <% if item.completed? %>

    <div class="item">
      <p style="opacity: 0.3;"><strike><%= item.content %></strike></p>
    </div>
    <div class="complete">
      <%= link_to "Mark as Complete", complete_todo_list_item_path(@todo_list, item.id), method: :patch %>
    </div>
    <div class="trash">
      <%= link_to "Delete", todo_list_item_path(@todo_list, item.id), method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
  <% else %>

    <div class="item">
      <p><%= item.content %></p>
    </div>
    <div class="complete">
      <%= link_to "Mark as Complete", complete_todo_list_item_path(@todo_list, item.id), method: :patch %>
    </div>
    <div class="trash">
      <%= link_to "Delete", todo_list_item_path(@todo_list, item.id), method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
  <% end %>
</div>
